\usepackage{setspace}

\newcommand{\DoubleLine}{
  \rule{\textwidth}{0.5px}\\\vspace*{-\baselineskip}\vspace*{2pt}
  \rule{\textwidth}{0.5px}\\[0.1\baselineskip]
}

\newcommand{\CreateTitle}[2]{
  \vspace*{-48pt}
  \DoubleLine
  {
    \scshape
    {\huge\bfseries#1\par}\vspace*{-0.5\baselineskip}
    {\setstretch{1}\LARGE#2\par}\vspace*{-\baselineskip}
  }
  \DoubleLine
}

\newcommand{\CreateAuthor}[2]{
  {\bfseries #1\\[0.5\baselineskip] #2}
}

